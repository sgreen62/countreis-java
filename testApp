package countries;

import java.util.Scanner;

public class CountriesListApp {
    public static void main(String[] args) {
        CountriesList app = new CountriesList();
        Scanner sc = new Scanner(System.in);

        app.displayWelcomeMessage();

        int choice = 0;
        do {
            app.displayMenu();

            // input validation for menu choice
            while (!sc.hasNextInt()) {
                System.out.print("Please enter a number (1-3): ");
                sc.next(); // throw away bad input
            }
            choice = sc.nextInt();
            sc.nextLine(); // consume newline

            switch (choice) {
                case 1:
                    System.out.print("Enter country name: ");
                    String name = sc.nextLine();
                    app.addCountry(name);
                    break;
                case 2:
                    app.listCountries();
                    break;
                case 3:
                    System.out.println("Goodbye!");
                    break;
                default:
                    System.out.println("Invalid option. Try 1-3.");
            }
        } while (choice != 3);

        sc.close();
    }
}
