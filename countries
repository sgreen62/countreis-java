package countries;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class CountriesList {
    private ArrayList<String> countries = new ArrayList<>();
    private int menuOption;

    public void displayWelcomeMessage() {
        System.out.println("Welcome to the Countries List Program!");
    }

    public void displayMenu() {
        System.out.println("\nMenu:");
        System.out.println("1. Display countries");
        System.out.println("2. Add a country");
        System.out.println("3. Exit");
        System.out.print("Enter your choice: ");
    }

    public int getMenuOption(Scanner scanner) {
        while (!scanner.hasNextInt()) {
            System.out.print("Invalid input. Enter a number (1-3): ");
            scanner.next();
        }
        menuOption = scanner.nextInt();
        scanner.nextLine(); // consume leftover newline
        return menuOption;
    }

    public void checkForCountry(String countryName) {
        for (String country : countries) {
            if (country.equalsIgnoreCase(countryName)) {
                System.out.println(countryName + " already exists in the list.");
                return;
            }
        }
        addCountry(countryName);
    }

    public void addCountry(String countryName) {
        countries.add(countryName);
        System.out.println(countryName + " has been added to the list.");
    }

    public void listCountries() {
        if (countries.isEmpty()) {
            System.out.println("No countries in the list yet.");
        } else {
            Collections.sort(countries);
            System.out.println("\nCountries in the list:");
            for (String country : countries) {
                System.out.println(country);
            }
        }
    }
}
