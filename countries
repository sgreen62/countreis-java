package countries;

import java.util.ArrayList;
import java.util.Collections;

public class CountriesList {
    private final ArrayList<String> countries = new ArrayList<>();

    public void displayWelcomeMessage() {
        System.out.println("Welcome to the Countries List Application!");
    }

    public void displayMenu() {
        System.out.println("\nMenu:");
        System.out.println("1 - Add a country");
        System.out.println("2 - List countries");
        System.out.println("3 - Exit");
        System.out.print("Enter menu number: ");
    }

    public void addCountry(String country) {
        String c = country.trim();
        if (c.isEmpty()) {
            System.out.println("Country name cannot be empty.");
            return;
        }
        if (countries.contains(c)) {
            System.out.println(c + " is already in the list.");
            return;
        }
        countries.add(c);
        Collections.sort(countries);
        System.out.println(c + " has been added.");
    }

    public void listCountries() {
        if (countries.isEmpty()) {
            System.out.println("\n(No countries yet)");
            return;
        }
        System.out.println("\nCountries:");
        for (String c : countries) System.out.println(c);
    }
}
